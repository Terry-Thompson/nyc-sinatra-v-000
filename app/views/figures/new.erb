<h1>Create a New Figure!</h1>
<form action='/figures' method='POST'>
<h2>Name: </h2>
<input type='text' name='figure[name]' id='figure_name'></input>

<h2>Select title(s)</h2>
<% @titles.each do |title| %>
<p><%= title.name %></p>
<p><input type='checkbox' name='figure[title_ids][]' id='<%= title.name %>' value='<%= title.id %>'></input></p>
<% end %>

<h2>Or create a new title:</h2>
<input type='text' name='title[name]' id='title_name'>
</input>

<h2>Select landmark(s)</h2>
<% @landmarks.each do |landmark| %>
<p><%= landmark.name %></p>
<p><input type='checkbox' name='figure[landmark_ids][]' id='<%= landmark.name %>' value='<%= landmark.id %>'></input></p>
<% end %>

<h2>Or create a new landmark:</h2>
<input type='text' name='landmark[name]' id='landmark_name'>
</input>

<input type='submit' value='Create'></input>
</form>
