<h1>Edit a Figure</h1>

<h2><%= @figure.name %></h2>
<form action='/figures/<%= @figure.id %>' method='POST'>
<p>New name?</p>
<input type='text' name='figure[name]' id='figure_name'>
<input type='hidden' id= 'id' value='<%= @figure.id %>'>
<% Title.all.each do |title| %>
<p><%= title.name %></p>
<input type='checkbox' name='figure[title_ids][]' <% 'checked' if @figure.title_ids.any?{|id| id == title.id} %>>  
<% end %>
<p>New Landmark?</p>
<input type='text' name='new_landmark'>

<input type='submit' value='Edit Figure'>
</form>
